
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            @model Member
            @{
                ViewData["Title"] = "Edit Member";
            }

            <h2>Edit Member</h2>

            <form method="post">
                <input type="hidden" asp-for="Id" />
                <input asp-for="Name" class="form-control mb-2" placeholder="Name" required />
                <input asp-for="Email" class="form-control mb-2" placeholder="Email" required />
                <input asp-for="Phone" class="form-control mb-2" placeholder="Phone" required />
                <button class="btn btn-primary">Update Member</button>
                <a href="@Url.Action("Index", "Member")" class="btn btn-secondary">Cancel</a>
            </form>
        </form>
    </div>
</div>
