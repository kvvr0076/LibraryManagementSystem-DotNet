<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Library Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Library System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("UserId") == null)
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Signup">Sign Up</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Book" asp-action="Index">Books</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Borrow" asp-action="Index">Borrow/Return</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Member" asp-action="Index">Members</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Book" asp-action="Add">Add Book</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Borrow" asp-action="Lend">Lend Book</a></li>
                        @if (Context.Session.GetString("UserRole") == "admin")
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Manage Users</a></li>
                        }
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-4">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
