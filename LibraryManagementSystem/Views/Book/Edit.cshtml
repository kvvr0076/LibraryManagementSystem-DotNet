
<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            @model Book
            @{
                ViewData["Title"] = "Edit Book";
            }

            <h2>Edit Book</h2>

            <form method="post">
                <input type="hidden" asp-for="Id" />
                <input asp-for="Title" class="form-control mb-2" placeholder="Title" required />
                <input asp-for="Author" class="form-control mb-2" placeholder="Author" required />
                <input asp-for="ISBN" class="form-control mb-2" placeholder="ISBN" />
                <input asp-for="Quantity" class="form-control mb-2" type="number" placeholder="Quantity" required />
                <button class="btn btn-primary">Update Book</button>
                <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Cancel</a>
            </form>
        </form>
    </div>
</div>
