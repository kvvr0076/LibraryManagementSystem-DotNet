@{
    ViewData["Title"] = "Lend Book";
    var books = ViewBag.Books as List<Book>;
    var members = ViewBag.Members as List<Member>;
}

<h2>Issue a Book</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">@TempData["Message"]</div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div class="mb-3">
                <label>Select Book:</label>
                <select name="bookId" class="form-control" required>
                    @foreach (var book in books)
                    {
                        <option value="@book.Id">@book.Title</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label>Select Member:</label>
                <select name="memberId" class="form-control" required>
                    @foreach (var member in members)
                    {
                        <option value="@member.Id">@member.Name</option>
                    }
                </select>
            </div>

            <button class="btn btn-success">Issue Book</button>
            <a href="@Url.Action("Index", "Borrow")" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
