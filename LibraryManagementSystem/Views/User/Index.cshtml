@model IEnumerable<User>
@{
    ViewData["Title"] = "Manage Users";
    var totalAdmins = (int)ViewBag.TotalAdmins;
}

<h2>Manage Users</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<a href="@Url.Action("Add", "User")" class="btn btn-primary mb-3">Add New User</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    <div class="d-flex justify-content-center gap-2">
                        <a href="@Url.Action("Edit", "User", new { id = user.Id })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "User", new { id = user.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
